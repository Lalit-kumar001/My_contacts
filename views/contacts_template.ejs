        <h1 id="page-heading">Contact List</h1>
        <div id="contact-box">
    <% for(i of contacts_List) { %>

        <div class="contact hover">
       <i class="fa-solid fa-phone"></i>
            <span class="name"><%=i.name %></span>
      <a href="/delete-contact/?id=<%=i._id%>"> <i class="fa-solid fa-trash float delete"></i> </a>  
       <span class="number"><%=i.phone%></span>
        </div>
         
        
        <%}%>
    </div>   
  <div class="form-box">
    <form action="/new-contact" method="post">
        <input type="text" name="name" placeholder="enter the name" class="form-content">
        <input type="number" name="phone" placeholder="enter mobile number" class="form-content">
        <button type="submit" class="form-content">Add contact</button>
        
      
      </form>
  </div>    



